<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="bar_pressed_black20">#22000000</color>
    <color name="bar_pressed_black5">#0c000000</color>
    <color name="bar_pressed_white40">#66FFFFFF</color>
    <color name="bar_transparent">#00000000</color>
    <declare-styleable name="TitleBar">
        <attr name="barStyle">
            <enum name="light" value="0x10" />
            <enum name="night" value="0x20" />
            <enum name="transparent" value="0x30" />
        </attr>
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="leftTitle" format="string" />
        <attr name="leftIcon" format="reference" />
        <attr name="backButton" format="boolean" />
        <attr name="leftColor" format="color" />
        <attr name="leftSize" format="dimension" />
        <attr name="leftBackground" format="reference|color" />
        <attr name="rightTitle" format="string" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightColor" format="color" />
        <attr name="rightSize" format="dimension" />
        <attr name="rightBackground" format="reference|color" />
        <attr name="lineVisible" format="boolean" />
        <attr name="lineColor" format="reference|color" />
        <attr name="lineSize" format="dimension" />
    </declare-styleable>
    <item name="bar_id_left_view" type="id" />
    <item name="bar_id_line_view" type="id" />
    <item name="bar_id_main_layout" type="id" />
    <item name="bar_id_right_view" type="id" />
    <item name="bar_id_title_view" type="id" />

    <style name="TitleBarNightStyle" ns1:ignore="ResourceName">
        <item name="android:background">#FF000000</item>
        <item name="leftIcon">@mipmap/icon_back_white_default</item>
        <item name="leftColor">#CCFFFFFF</item>
        <item name="titleColor">#EEFFFFFF</item>
        <item name="rightColor">#CCFFFFFF</item>
        <item name="lineColor">#FFFFFFFF</item>
        <item name="leftBackground">@drawable/bar_selector_selectable_black</item>
        <item name="rightBackground">@drawable/bar_selector_selectable_black</item>
    </style>

    <style name="TitleBarTransparentStyle" ns1:ignore="ResourceName">
        <item name="android:background">#00000000</item>
        <item name="leftIcon">@mipmap/icon_back_white_default</item>
        <item name="leftColor">#FFFFFFFF</item>
        <item name="titleColor">#FFFFFFFF</item>
        <item name="rightColor">#FFFFFFFF</item>
        <item name="lineColor">#00000000</item>
        <item name="lineVisible">false</item>
        <item name="leftBackground">@drawable/bar_selector_selectable_transparent</item>
        <item name="rightBackground">@drawable/bar_selector_selectable_transparent</item>
    </style>
</resources>